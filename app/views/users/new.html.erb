<div class="container text-center">
    
        <h2 class="NewUsers-title">Sign up!</h2>
</div>
<div class="col-md-6 col-md-offset-5">

            <section>
                <%= form_with url: users_path do |form| %>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <p class="Form-label">Name: </p>
                        <%=form.text_field :name, class: "form-control", placeholder: "John Davis"%>
                    </div>
                </div>
                
                <div class="row">
                    <div class="form-group col-lg-6">
                        <p class="Form-label">Email: </p>
                        <%=form.email_field :email, class: "form-control", placeholder: "johndavis@gmail.com"%>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <p class="Form-label">Phone number: </p>
                        <%=form.telephone_field :phone, class: "form-control"%>
                    </div> 
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <p class="Form-label">Password: </p>
                        <%=form.password_field :password, class: "form-control"%>
                    </div>   
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                    <%=form.submit "Sign up!", class: "btn btn-primary"%>
                    <%= link_to "Home",root_path %>
                    </div>
                </div>

                <%end%>
            </section>

</div>